<Window x:Class="Watchful.ModifyMemberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modify User" Height="200" Width="300">
    <Grid>
        <TextBlock Text="Name:" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="UserNameTextBox" Margin="60,10,10,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200"/>

        <TextBlock Text="Latitude:" Margin="10,40,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="LatitudeTextBox" Margin="60,40,10,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200"/>

        <TextBlock Text="Longitude:" Margin="10,70,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="LongitudeTextBox" Margin="60,70,10,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200"/>

        <Button Content="Save" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Width="75" Click="SaveButton_Click"/>
    </Grid>
</Window>
