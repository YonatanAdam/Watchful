<Page x:Class="Watchful.MapPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Watchful"
      xmlns:gmaps="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
      mc:Ignorable="d"
      Title="Watchful" Height="900" Width="1600"
      Background="#FF1E1E1E">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Top bar -->
            <RowDefinition Height="*"/>
            <!-- Map -->
        </Grid.RowDefinitions>

        <!-- Top Header Bar -->
        <Grid Grid.Row="0" Background="#FF2A2A2A">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <!-- ComboBox -->
                <ColumnDefinition Width="Auto"/>
                <!-- Create/Join Group -->
                <ColumnDefinition Width="Auto"/>
                <!-- List Members -->
                <ColumnDefinition Width="*"/>
                <!-- Spacer (flexible space) -->
                <ColumnDefinition Width="Auto"/>
                <!-- Rules -->
                <ColumnDefinition Width="Auto"/>
                <!-- Zoom + Coords -->
                <ColumnDefinition Width="Auto"/>
                <!-- Settings -->
            </Grid.ColumnDefinitions>

            <!-- Group Selector -->
            <ComboBox x:Name="groupSelector"
                      Grid.Column="0"
                      Margin="5"
                      HorizontalAlignment="Center"
                      HorizontalContentAlignment="Center"
                      ToolTip="{Binding SelectedItem.GroupName, ElementName=groupSelector}"
                      MaxDropDownHeight="200"
                      DisplayMemberPath="GroupName"
                      SelectedValuePath="Id"
                      SelectionChanged="GroupSelector_SelectionChanged"/>

            <!-- Create or Join Group Button -->
            <Button x:Name="groupButton"
                    Grid.Column="1"
                    Content="Create or Join Group"
                    Margin="5"
                    Height="25"
                    VerticalAlignment="Center"
                    Click="GroupButton_Click"/>

            <!-- List Members Button -->
            <Button x:Name="listMembers"
                    Grid.Column="2"
                    Content="List Members"
                    Margin="5"
                    Height="25"
                    VerticalAlignment="Center"
                    Click="listMembers_Click"/>

            <!-- Rules Button -->
            <Button x:Name="rulesButton"
                    Grid.Column="4"
                    Content="Rules"
                    Width="60"
                    Margin="5"
                    Height="25"
                    VerticalAlignment="Center"
                    Visibility="Collapsed"
                    Click="RulesButton_Click"/>

            <!-- Zoom + Coordinates -->
            <StackPanel Grid.Column="5"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="5">
                <TextBlock x:Name="zoomLvl"
                           Foreground="White"
                           Margin="0,0,10,0"/>
                <TextBlock x:Name="coordinates"
                           Foreground="White"/>
            </StackPanel>

            <!-- Settings Button -->
            <Button x:Name="settingsButton"
                    Grid.Column="6"
                    Content="Settings"
                    Margin="0, 0 ,20,0"
                    Height="25"
                    VerticalAlignment="Center"
                    Click="SettingsButton_Click"/>
        </Grid>

        <!-- Map Control -->
        <gmaps:GMapControl x:Name="gmap"
                           Grid.Row="1"
                           MouseRightButtonDown="Gmap_MouseRightButtonDown"/>
    </Grid>
</Page>
