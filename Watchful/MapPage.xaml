<Page x:Class="Watchful.MapPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Watchful"
      xmlns:gmaps="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
      mc:Ignorable="d"
      Title="Watchful" Height="900" Width="1600"
      Background="#FF1E1E1E">

    <Grid>
        <!-- <Grid.ColumnDefinitions> -->
        <!--     <ColumnDefinition Width="50*"/> -->
        <!--     <ColumnDefinition Width="1031*"/> -->
        <!-- </Grid.ColumnDefinitions> -->
        <!-- Main layout rows for header and map display -->
        <Grid.RowDefinitions>
            <!-- Top Header Row for controls and settings button -->
            <RowDefinition Height="Auto"/>
            <!-- Map Display Row for the GMap control -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Header Bar with Controls (Map Type Selector, Clear Marks, Zoom Level, Coordinates, Settings Button) -->
        <Grid Grid.Row="0" Background="#FF2A2A2A" FlowDirection="RightToLeft" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <!-- Column for Map Type ComboBox (Auto width) -->
                <ColumnDefinition Width="Auto"/>
                <!-- Column for Clear Marks Button (Auto width) -->
                <ColumnDefinition Width="Auto"/>
                <!-- Column for Zoom Level and Coordinates Display (Takes remaining space) -->
                <ColumnDefinition Width="*"/>
                <!-- Column for Settings Button (Auto width) -->
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <ComboBox x:Name="groupSelector" Margin="5" Grid.Column="0" MaxWidth="300" SelectionChanged="GroupSelector_SelectionChanged"
                      DisplayMemberPath="GroupName" SelectedValuePath="Id"/>


            <Button x:Name="groupButton" Grid.Column="1" Margin="5,5,5,0" Content="Create or Join Group" Click="GroupButton_Click" Height="25" VerticalAlignment="Top"/>
            <Button x:Name="listMembers" Grid.Column="6" Margin="5,5,5,0" Content="List Members" Height="25" VerticalAlignment="Top" Click="listMembers_Click"/>

            <!--Load Marks from DB -->
            <Button x:Name="LoadMarks" Grid.Column="4" Margin="5" Content="Load Marks" Click="LoadMarks_OnClick"/>
            <!--Add Mark to DB -->
            <Button x:Name="AddMark" Grid.Column="5" Margin="5" Content="Add Mark" Click="AddMark_OnClick"/>

            <!-- StackPanel for displaying Zoom Level and Coordinates -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock x:Name="zoomLvl" Foreground="White" Margin="0,0,10,0"/>
                <TextBlock x:Name="coordinates" Foreground="White"/>
            </StackPanel>

            <!-- Settings Button -->
            <Button x:Name="settingsButton" Grid.Column="3" Content="Settings" Margin="5" Click="SettingsButton_Click"/>
        </Grid>

        <gmaps:GMapControl x:Name="gmap"
                           Grid.Row="1" Grid.ColumnSpan="2"
                           MouseRightButtonDown="Gmap_MouseRightButtonDown"/>
    </Grid>
</Page>
